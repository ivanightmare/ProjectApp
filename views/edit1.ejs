
<div class="container mt-3" >
    <div class="row" >
        <div class="col-md-6" style="width:800px; margin:0 auto;">
            <h1 style="text-align:center">User Update</h1>
            <form action="/users/edit1/" method="post">
                <div class="form-group ">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= users.name %>">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= users.email %>">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" value="<%= users.password %>">
                </div>
                <div class="form-group">
                    <label for="status" class="text-align">Status</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-4" name="status" value="Active" <%= users.status=='admin'? 'checked':'' %>>
                        <label for="radio-4" class="radio-label">Admin</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-5" name="status" value="Inactive" <%= users.status=='customer'? 'checked':'' %>>
                        <label for="radio-5" class="radio-label">Customer</label>
                    </div>
    
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>



